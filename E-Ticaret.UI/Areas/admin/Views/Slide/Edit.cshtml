@model Slide
<div class="right_col" role="main">
	<div class="">
		<div class="page-title">
			<div class="title_left">
				<h3>Slayt Düzenleme Sayfası</h3>
			</div>
		</div>
	</div>
	<div class="clearfix"></div>
	<div class="row">
		<div class="col-md-12 col-sm-12 ">
			<div class="x_panel">
				<div class="x_content">
					<br />
					<form asp-controller="Slide" asp-action="Edit" method="post" data-parsley-validate class="form-horizontal form-label-left">
						<input type="hidden" asp-for="@Model.ID" />
						<div class="item form-group">
							<label class="col-form-label col-md-3 col-sm-3 label-align" asp-for="@Model.Slogan"></label>
							<div class="col-md-6 col-sm-6 ">
								<input class="form-control" asp-for="@Model.Slogan">
								<span asp-validation-for="@Model.Slogan"></span>
							</div>
						</div>

						<div class="item form-group">
							<label class="col-form-label col-md-3 col-sm-3 label-align" asp-for="@Model.Title"></label>
							<div class="col-md-6 col-sm-6 ">
								<input asp-for="@Model.Title" class="form-control">
								<span asp-validation-for="@Model.Title"></span>
							</div>
						</div>

						<div class="item form-group">
							<label class="col-form-label col-md-3 col-sm-3 label-align" asp-for="@Model.Description"></label>
							<div class="col-md-6 col-sm-6 ">
								<input asp-for="@Model.Description" class="form-control">
								<span asp-validation-for="@Model.Description"></span>
							</div>
						</div>

						<div class="item form-group">
							<label class="col-form-label col-md-3 col-sm-3 label-align" asp-for="@Model.Price"></label>
							<div class="col-md-6 col-sm-6 ">
								<input asp-for="@Model.Price" class="form-control">
								<span asp-validation-for="@Model.Price"></span>
							</div>
						</div>

						<div class="item form-group">
							<label class="col-form-label col-md-3 col-sm-3 label-align" asp-for="@Model.Link"></label>
							<div class="col-md-6 col-sm-6 ">
								<input asp-for="@Model.Link" class="form-control">
								<span asp-validation-for="@Model.Link"></span>
							</div>
						</div>

						<div class="item form-group">
							<label class="col-form-label col-md-3 col-sm-3 label-align" asp-for="@Model.DisplayIndex"></label>
							<div class="col-md-6 col-sm-6 ">
								<input asp-for="@Model.DisplayIndex" class="form-control">
								<span asp-validation-for="@Model.DisplayIndex"></span>
							</div>
						</div>

						<div class="item form-group">
							<label class="col-form-label col-md-3 col-sm-3 label-align" asp-for="@Model.Picture"></label>
							<div class="col-md-6 col-sm-6 ">
								<input asp-for="@Model.Picture" class="form-control">
								<span asp-validation-for="@Model.Picture"></span>
							</div>
						</div>

						<div class="ln_solid"></div>
						<div class="item form-group">
							<div class="col-md-6 col-sm-6 offset-md-3">
								<button asp-controller="Slide" asp-action="Index" class="btn btn-primary">İptal Et</button>
								<button class="btn btn-primary" type="reset">Temizle</button>
								<button type="submit" class="btn btn-success">Düzenle</button>
							</div>
						</div>

					</form>
				</div>
			</div>
		</div>
	</div>

</div>