@model IEnumerable<Product>
<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>

        <div class="row" style="display: block;">
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    <div class="col-md-6 col-sm-6">
                        <h2>Ürün Yönetimi</h2>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <a asp-controller="Product" asp-action="New" class="btn btn-success float-right" style="color:#fff">Yeni Ürün</a>
                    </div>
                    <div class="x_content">
                        <div class="table-responsive">
                            <table class="table table-striped jambo_table bulk_action">
                                <thead>
                                    <tr class="headings">
                                        <th class="column-title">Düzenle</th>
                                        <th class="column-title">Ürün Adı </th>
                                        <th class="column-title">Fiyat </th>
                                        <th class="column-title">Stok Miktarı </th>
                                        <th class="column-title">Sıra </th>
                                        <th class="column-title"> </th>
                                        <th class="column-title">Sil</th>
                                    </tr>
                                </thead>
                                <tbody>
                                        @foreach (Product s in Model)
                                        {
                                        <tr class="even pointer">
                                            <td><a type="button" class="btn btn-primary btn-sm" asp-controller="Product" asp-action="Edit" asp-route-id="@s.ID">Düzenle</a></td>
                                            <td class=" ">@s.Name</td>
                                            <td class=" ">@s.Price</td>
                                            <td class=" ">@s.Stock</td>
                                            <td class=" ">@s.DisplayIndex</td>
                                            <td><a type="button" style="margin-right: -60px;" class="btn btn-primary btn-sm" asp-controller="ProductPicture" asp-action="Index" asp-route-productid="@s.ID">Ürüne Ait Resimler</a></td>
                                            <td><a type="button" class="btn btn-danger btn-sm"  asp-controller="Product" asp-action="Delete" asp-route-id="@s.ID">Sil</a></td>
                                        </tr>
                                        }
                                </tbody>
                            </table>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
