@model IEnumerable<Category>
<header class="site-navbar" role="banner">
    <div class="site-navbar-top">
        <div class="container">
            <div class="row align-items-center">

                <div class="col-6 col-md-4 order-2 order-md-1 site-search-icon text-left">
                    <form action="" class="site-block-top-search">
                        <span class="icon icon-search2"></span>
                        <input type="text" class="form-control border-0" placeholder="Ürün, Marka veya Kategori ara.">
                    </form>
                </div>

                <div class="col-12 mb-3 mb-md-0 col-md-4 order-1 order-md-2 text-center">
                    <div class="site-logo">
                        <a asp-controller="Home" asp-action="Index" class="js-logo-clone">E-Ticaret Projem</a>
                    </div>
                </div>

                <div class="col-6 col-md-4 order-3 order-md-3 text-right">
                    <div class="site-top-icons">
                        <ul>
                            @*<li><a href="#"><span class="icon icon-person"></span></a></li>*@
                            <li>
                                <a asp-controller="Cart" asp-action="Index" class="site-cart">
                                    <span class="icon icon-shopping_cart"></span>
                                    <span class="count">0</span>
                                </a>
                            </li>
                            <li class="d-inline-block d-md-none ml-md-0"><a href="#" class="site-menu-toggle js-menu-toggle"><span class="icon-menu"></span></a></li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <nav class="site-navigation text-right text-md-center" role="navigation">
        <div class="container">
            <ul class="site-menu js-clone-nav d-none d-md-block">
                <li><a asp-action="Index" asp-controller="Home" style="font-weight: bold;">Anasayfa</a></li>
                <li class="has-children active">
                    <a asp-controller="Product" asp-action="ProductPage" style="font-weight: bold;">Ürünler</a>
                    <ul class="dropdown">
                        @foreach (Category c in Model.Where(x => x.ParentID == null))
                        {
                            <li>

                                <a href="#" style="font-weight: bold; cursor:context-menu;">@c.Name</a>
                                @if (c.SubCategories.Any())
                                {
                                    <ul class="sub-menu">
                                        @foreach (Category subCategory in c.SubCategories)
                                        {
                                            <li id="subcat"><a id="subcategorys" a asp-controller="Product" asp-action="ProductPage" style="margin-top: 20px; margin-bottom: 20px; margin-left: 10px;">@subCategory.Name</a></li>
                                        }
                                    </ul>
                                }
                            </li>
                        }
                    </ul>
                </li>
                <li><a asp-controller="Home" asp-action="About" style="font-weight: bold;">Hakkımızda</a></li>
                <li><a asp-controller="Home" asp-action="Contact" style="font-weight: bold;">İletişim</a></li>
            </ul>
        </div>
    </nav>
</header>
